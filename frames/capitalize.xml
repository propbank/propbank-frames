<frameset>
  <predicate lemma="capitalize">
    <roleset id="capitalize.01" name="provide with cash value">
      <aliases>
        <alias pos="v">capitalize</alias>
        <alias pos="n">capitalization</alias>
      </aliases>
      <roles>
        <role descr="assigner" f="PAG" n="0"/>
        <role descr="assigned to" f="PPT" n="1"/>
        <role descr="value" f="PRD" n="2"/>
      </roles>
      <usagenotes>
        <usage resource="PropBank" version="1.0" inuse="+"/>
        <usage resource="PropBank" version="2.1.5" inuse="+"/>
        <usage resource="PropBank" version="3.1" inuse="+"/>
