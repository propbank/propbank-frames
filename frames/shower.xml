        <role descr="host" f="pag" n="0"/>
        <role descr="guest of honor" f="ppt" n="1"/>
        <role descr="occasion celebrated" f="prp" n="2"/>
      </roles>
      <example name="arg2" src="sms" type="">
        <inflection aspect="ns" form="ns" person="ns" tense="ns" voice="ns"/>
        <text>So Russell is getting married in a month . Went to the wedding shower today . Also Adam seems to think Man got married . For real .</text>
        <arg f="" n="2">wedding</arg>
        <rel f="">shower</rel>
