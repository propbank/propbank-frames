        <role descr="causer of things falling" f="cau" n="0">
          <vnrole vncls="17.2" vntheta="Agent"/>
          <vnrole vncls="9.7-1" vntheta="Agent"/>
          <vnrole vncls="41.1.1" vntheta="Agent"/>
        </role>
        <role descr="things falling" f="PPT" n="1">
          <vnrole vncls="17.2" vntheta="Theme"/>
          <vnrole vncls="9.7-1" vntheta="Theme"/>
          <vnrole vncls="41.1.1" vntheta="Patient"/>
          <vnrole vncls="57" vntheta="Theme"/>
        </role>
        <role descr="falling on what" f="gol" n="2">
          <vnrole vncls="17.2" vntheta="Destination"/>
          <vnrole vncls="9.7-1" vntheta="Destination"/>
        </role>
      </roles>
      <example name="all args" src="" type="">
        <inflection aspect="ns" form="full" person="ns" tense="present" voice="active"/>
        <text>Endless seconds wondering if those huge windows would buckle and shower us with glass.</text>
        <arg f="" n="0">those huge windows</arg>
        <arg f="mod" n="m">would</arg>
        <rel f="">shower</rel>
        <arg f="" n="1">us</arg>
        <arg f="" n="2">with glass</arg>
      </example>
      <example name="personal hygiene" src="" type="">
        <inflection aspect="ns" form="full" person="third" tense="present" voice="active"/>
        <text>John faithfully showers once a month.</text>
        <arg f="" n="0">John</arg>
        <arg f="mnr" n="m">faithfully</arg>
        <rel f="">showers</rel>
        <arg f="tmp" n="m">once a month</arg>
      </example>
      <example name="weather with arg0" src="internet" type="-">
        <inflection aspect="ns" form="participle" person="third" tense="past" voice="active"/>
        <text>After years of drought, the clouds showered heavy rain</text>
        <arg f="tmp" n="m">After years of drought</arg>
        <arg f="" n="0">the clouds</arg>
        <rel f="">showered</rel>
        <arg f="" n="1">heavy rain</arg>
      </example>
      <example name="weather with empty 'it'" src="internet" type="-">
        <inflection aspect="ns" form="participle" person="third" tense="past" voice="active"/>
        <text>Well, it "showered" on us all the way from Knoxville to Elizabethton.</text>
        <arg f="dis" n="m">Well</arg>
        <rel f="">showered</rel>
        <arg f="" n="2">on us</arg>
        <arg f="loc" n="m">all the way from Knoxville to Elizabethton</arg>
      </example>
      <example name="Within LVC" src="" type="">
        <inflection aspect="ns" form="full" person="ns" tense="present" voice="active"/>
        <text>why-1 ca n't you take quick shower *T*-1?</text>
        <arg f="mod" n="m">ca</arg>
        <arg f="neg" n="m">n't</arg>
        <arg f="" n="0">you</arg>
        <arg f="lvb" n="m">take</arg>
        <arg f="tmp" n="m">quick</arg>
        <rel f="">shower</rel>
        <arg f="cau" n="m">*T*-1</arg>
      </example>
      <example name="All arguments" src="web" type="">
        <inflection aspect="ns" form="ns" person="ns" tense="ns" voice="ns"/>
        <text>He continually amazes me with His showering of love on my life.</text>
        <arg f="" n="0">His</arg>
        <rel f="">showering</rel>
        <arg f="" n="1">of love</arg>
        <arg f="" n="2">on my life.</arg>
      </example>
